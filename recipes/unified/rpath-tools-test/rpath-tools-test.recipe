loadSuperClass('testpackage')
class rPathToolsTest(TestPackageRecipe):
    name = 'rpath-tools-test'
    version = '0'

    # Requirements
    buildRequires = [
        'conary-test:python',
        'python-lxml',
    ]

    Flags.test = True

    def setup(r):
        r.addGitSnapshot()
        # Force the testsuite to use installed code
        r.Move('rpath_tools', '../')
        if Flags.test:
            r.run_tests(do_coverage=True)
        r.Copy('rpath_toolstest', '%(libdir)s/python%(pyver)s/site-packages/')
        r.ComponentSpec('python', '%(libdir)s/')

